doctype html
html
    head
        title Middle
        link(rel='stylesheet', href='middle.css')
        style.
            .body {
                font-family: Jokerman;
                display: flex;
                background-repeat: no-repeat;
                background-size: cover;
                align-items: center;
                background-image: url('https://t3.ftcdn.net/jpg/02/57/52/48/240_F_257524827_A0OyQl7496wY6yA47YS4L2ofQn45uXsu.jpg');
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
            }
            .container {
                display: flex;
                max-width:800px;
                margin: 0 auto;
                padding: 20px;
                height: 500px;
                background-color: rgba(255, 255, 255, 0.5);
                border-radius: 10px;
                box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            }

            .poster {
                flex: 1;
                margin-right:20px;
                width:500px;
                height: 500px;
            }
            .poster img {
                width:400px;
                height: 500px;
                border-radius: 10px;
            }
            .details {
                display: flex;
                flex-direction: column;
                font-size:25px;
                margin-right: 35px;
            }
            .btn {
                border: 5px solid #00abf0;
                border-radius: 25px;
                text-align: center;
                margin: auto;
                padding: 7px;
                background-color: rgba(49, 146, 206, 0.128);
                color: #00abf0;
            }
            .btn:hover  {
                background-color: #00abf0;
            }
            .a-tag {
                color: white;
                text-decoration: none;
            }
            .cover {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(243, 241, 241, 0.5);
            }
    body.body
        .container
            .poster
                img(src=file, alt='Poster Image')
            .details
                h1 Show Time
                table(border='1', cellspacing='10', width='100%', height='50%', style='font-size: 25px;')
                    tr.btn
                        td.a-tag 6:00 AM
                        td.a-tag 9:30 AM
                    tr.btn
                        td.a-tag 11:30 AM
                        td.a-tag 2:30 PM
                    tr.btn
                        td.a-tag 6:00 PM
                        td.a-tag 9:00 PM
                .btn
                    a(href='book.html', class='a-tag', id='a-tag') BOOK NOW
